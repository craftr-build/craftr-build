# type: ignore

apply 'cxx'
apply 'run'

cxx('lib') {
  self.sources = [project.file('src/hellosayer.c')]
  self.produces = 'static_library'
}

cxx('main') {
  self.sources = [project.file('src/main.c')]
  self.dependencies.append project.tasks.lib
}

run {
  self.dependencies.append project.tasks.main
}
